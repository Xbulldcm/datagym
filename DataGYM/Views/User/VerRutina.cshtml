@model DataGYM.Models.RoutineViewModel

@{
    ViewBag.Title = "VerRutina";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rutina</h2>



<div class="card">
    <div class="card-body">
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Name_Routine, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Name_Routine, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
                    @Html.ValidationMessageFor(model => model.Name_Routine, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NOTE_Routine, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.NOTE_Routine, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
                    @Html.ValidationMessageFor(model => model.NOTE_Routine, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CREATE_DATE_ROUTINE, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.CREATE_DATE_ROUTINE, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
                    @Html.ValidationMessageFor(model => model.CREATE_DATE_ROUTINE, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Detalles Ejercicios
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="example1" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("Día")
                        </th>
                        <th>
                            @Html.DisplayName("Tipo")
                        </th>
                        <th>
                            @Html.DisplayName("Nombre")
                        </th>
                        <th>
                            @Html.DisplayName("Repeticiones")
                        </th>
                        <th>
                            @Html.DisplayName("Rondas")
                        </th>
                        <th>
                            @Html.DisplayName("Notas")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lista_ejerciciosVM)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EXERCISE_DAY)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EXERCISE_TYPE_ID_NAME)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EXERCISE_NAME)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EXERCISE_REP_COUNT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EXERCISE_REP_ROUND)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EXECISE_NOTE)
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="col-md-offset-2 col-md-12">

    <a href="@Url.Action("Index", "User")" class="btn btn-dark" style="height:100%;width:100%;color:white">Volver</a>

</div>
