@model IEnumerable<DataGYM.Models.SiteViewModel>

@{
    ViewBag.Title = "Lista Sites";
}

<h2>Sites</h2>

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Detalles Sites |
        <a href="@Url.Action("Create", "Site")" class="btn btn-info">Agregar</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="example1" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.LOCATION)
                        </th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LOCATION)
                            </td>
                            <td>
                                <button class="btn btn-success" type="button" style="height:100%;width:100%;" onclick="location.href='@Url.Action("Edit", "Site", new { id = item.SITE_ID })'">Editar&nbsp;<i class="fas fa-edit"></i></button>


                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
