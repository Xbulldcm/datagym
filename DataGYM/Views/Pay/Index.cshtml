@model IEnumerable<DataGYM.Models.PayViewModel>

@{
    ViewBag.Title = "Lista Pagos";
}

<h2>Pagos</h2>

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Detalles Pagos @*|
        <a href="@Url.Action("Create", "Pay")" class="btn btn-info">Agregar</a>*@
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="example1" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IS_ACTIVE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PAYMENT_TYPE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CARD_NUMBER)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EXPIRES)
                        </th>

                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td style="text-align:center">
                            @if (item.IS_ACTIVE == true)
                            {
                                <span class="badge badge-warning" style="background-color:#28a745;color: #fff;">1-Pendiente</span>
                            }
                            else
                            {
                                <span class="badge badge-warning" style="background-color:#dc3545;color: #fff;">2-Pago</span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PAYMENT_TYPE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CARD_NUMBER)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EXPIRES)
                        </td>

                        <td>
                            <button class="btn btn-success" type="button" style="height:100%;width:100%;" onclick="location.href='@Url.Action("Edit", "Pay", new { id = item.PAYMENT_ID })'">Editar&nbsp;<i class="fas fa-edit"></i></button>


                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
